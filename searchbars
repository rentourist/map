<body>
<div id="sidebar">
  <h2>Proveedores de Turismo</h2>
  <div id="search-bar-container">
    <input type="text" id="search-city" class="search-bar" placeholder="Buscar por ciudad" />
    <input type="text" id="search-activity" class="search-bar" placeholder="Buscar por producto/actividad" />
  </div>
  <div id="provider-list">
    <!-- List of providers will be dynamically generated here -->
  </div>
</div>
<div id="map"></div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script>
  // Initialize the map
  var map = L.map('map').setView([-38.4161, -63.6167], 4); // Centered on Argentina

  // Add OpenStreetMap tiles
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: 'Â© OpenStreetMap contributors'
  }).addTo(map);

  // URL of the published Google Sheet in CSV format
  var sheetURL = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vS0FQT0wlhjdEp306XgRO5LAW7XexeTYP_Vh8X3uJuusZ2-SR1ZB7Jd0MZCZBaHOGN07cV6ev7aU4kK/pub?output=csv';

  // Array to hold all provider data
  var providers = [];

  // Function to fetch and parse CSV data
  function fetchCSV(url) {
    fetch(url)
      .then(response => response.text())
      .then(csvText => {
        parseCSV(csvText);
      });
  }

  // Function to parse CSV and add markers to the map and list to the sidebar
  function parseCSV(csvText) {
    var rows = csvText.split('\n').slice(1);
    var providerData = {};
    rows.forEach(row => {
      var cols = row.split(',');
      var providerName = cols[0];
      var lat = parseFloat(cols[1]);
      var lng = parseFloat(cols[2]);
      var description = cols[3];
      var activity = cols[4];
      var product = cols[5];

      if (!isNaN(lat) && !isNaN(lng)) {
        if (!providerData[providerName]) {
          providerData[providerName] = {
            name: providerName,
            lat: lat,
            lng: lng,
            description: description,
            activity: activity,
            products: []
          };
        }
        providerData[providerName].products.push(product);
      }
    });

    // Convert providerData to an array and add to providers array
    for (var key in providerData) {
      providers.push(providerData[key]);
    }

    // Add markers to the map and providers to the sidebar
    providers.forEach(provider => {
      // Add marker to the map
      var marker = L.marker([provider.lat, provider.lng]).addTo(map)
        .bindPopup('<b>' + provider.name + '</b><br>' + provider.description + '<br>' + provider.activity + '<br>' + provider.products.join(', '));

      // Add provider to the sidebar list
      var providerItem = document.createElement('div');
      providerItem.className = 'provider-item';
      providerItem.innerHTML = '<div class="provider-name">' + provider.name + '</div>' +
                               '<div>' + provider.description + '</div>' +
                               '<div>' + provider.activity + '</div>' +
                               '<div>Productos: ' + provider.products.join(', ') + '</div>' +
                               '<button class="whatsapp-button">Enviar Whatsapp</button>';
      providerItem.querySelector('.whatsapp-button').addEventListener('click', function() {
        sendWhatsApp(provider.products.join(', '), provider.name);
      });
      providerItem.addEventListener('click', function() {
        map.setView([provider.lat, provider.lng], 10);
        marker.openPopup();
      });
      document.getElementById('provider-list').appendChild(providerItem);
    });
  }

  // Function to send WhatsApp message
  function sendWhatsApp(products, provider) {
    var message = 'Hola, quiero alquilar ' + products + ' de ' + provider;
    var whatsappURL = 'https://wa.me/543812187196?text=' + encodeURIComponent(message);
    window.open(whatsappURL, '_blank');
  }

  // Function to filter providers based on search input
  function filterProviders() {
    var cityQuery = document.getElementById('search-city').value.toLowerCase();
    var activityQuery = document.getElementById('search-activity').value.toLowerCase();
    var filteredProviders = providers.filter(provider =>
      provider.description.toLowerCase().includes(cityQuery) &&
      (provider.activity.toLowerCase().includes(activityQuery) || provider.products.some(product => product.toLowerCase().includes(activityQuery)))
    );

    // Clear the current list and markers
    document.getElementById('provider-list').innerHTML = '';
    map.eachLayer(function(layer) {
      if (layer instanceof L.Marker) {
        map.removeLayer(layer);
      }
    });

    // Add filtered providers to the map and sidebar
    filteredProviders.forEach(provider => {
      var marker = L.marker([provider.lat, provider.lng]).addTo(map)
        .bindPopup('<b>' + provider.name + '</b><br>' + provider.description + '<br>' + provider.activity + '<br>' + provider.products.join(', '));

      var providerItem = document.createElement('div');
      providerItem.className = 'provider-item';
      providerItem.innerHTML = '<div class="provider-name">' + provider.name + '</div>' +
                               '<div>' + provider.description + '</div>' +
                               '<div>' + provider.activity + '</div>' +
                               '<div>Productos: ' + provider.products.join(', ') + '</div>' +
                               '<button class="whatsapp-button">Enviar Whatsapp</button>';
      providerItem.querySelector('.whatsapp-button').addEventListener('click', function() {
        sendWhatsApp(provider.products.join(', '), provider.name);
      });
      providerItem.addEventListener('click', function() {
        map.setView([provider.lat, provider.lng], 10);
        marker.openPopup();
      });
      document.getElementById('provider-list').appendChild(providerItem);
    });
  }

  // Fetch data and create map markers and sidebar list
  fetchCSV(sheetURL);

  // Add event listeners to the search bars
  document.getElementById('search-city').addEventListener('input', filterProviders);
  document.getElementById('search-activity').addEventListener('input', filterProviders);
</script>
</body>
</html>
