<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Mapa de Proveedores de Turismo</title>
<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<style>
  body {
    display: flex;
    font-family: Arial, sans-serif;
  }
  #sidebar {
    width: 30%;
    height: 100vh;
    overflow-y: auto;
    padding: 10px;
    box-shadow: 2px 0 5px rgba(0,0,0,0.1);
  }
  #map {
    width: 70%;
    height: 100vh;
  }
  .provider-item {
    padding: 10px;
    border-bottom: 1px solid #ccc;
    cursor: pointer;
  }
  .provider-item:hover {
    background-color: #f0f0f0;
  }
  #search-bar-container {
    margin-bottom: 10px;
  }
  .search-bar {
    width: 100%;
    padding: 5px;
    margin-bottom: 5px;
  }
  .product-item {
    margin-left: 10px;
    padding: 5px;
  }
  .product-item img, .provider-logo {
    max-width: 100px;
    height: auto;
  }
</style>
</head>
<body>
<div id="sidebar">
  <h2>Proveedores de Turismo</h2>
  <div id="search-bar-container">
    <input type="text" id="search-city" class="search-bar" placeholder="Buscar por ciudad" />
    <input type="text" id="search-activity" class="search-bar" placeholder="Buscar por producto/actividad" />
  </div>
  <div id="provider-list">
    <!-- La lista de proveedores se generará dinámicamente aquí -->
  </div>
</div>
<div id="map"></div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script>
  // Inicializar el mapa centrado en Argentina
  var map = L.map('map').setView([-34.6037, -58.3816], 4); // Vista inicial centrada en Argentina

  // Agregar tiles de OpenStreetMap
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '© OpenStreetMap contributors'
  }).addTo(map);

  // URL de la hoja de Google publicada en formato CSV
  var sheetURL = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vS0FQT0wlhjdEp306XgRO5LAW7XexeTYP_Vh8X3uJuusZ2-SR1ZB7Jd0MZCZBaHOGN07cV6ev7aU4kK/pub?output=csv';

  // Array para almacenar todos los datos de proveedores
  var providers = [];

  // Función para obtener y analizar datos CSV
  function fetchCSV(url) {
    fetch(url)
      .then(response => response.text())
      .then(csvText => {
        parseCSV(csvText);
      });
  }

  // Función para analizar CSV y agregar marcadores al mapa y lista al sidebar
  function parseCSV(csvText) {
    var rows = csvText.split('\n').slice(1);
    rows.forEach(row => {
      var cols = row.split(',');
      var providerName = cols[0];
      var lat = parseFloat(cols[1]);
      var lng = parseFloat(cols[2]);
      var description = cols[3];
      var activity = cols[4];
      var product = cols[5];
      var logoURL = cols[6];
      var productImageURL = cols[7];

      if (!isNaN(lat) && !isNaN(lng)) {
        var provider = {
          name: providerName,
          lat: lat,
          lng: lng,
          description: description,
          activity: activity,
          product: product,
          logoURL: logoURL,
          productImageURL: productImageURL
        };
        providers.push(provider);
      }
    });
  }

  // Función para filtrar proveedores basado en la entrada de búsqueda
  function filterProviders() {
    var cityQuery = document.getElementById('search-city').value.toLowerCase();
    var activityQuery = document.getElementById('search-activity').value.toLowerCase();
    var filteredProviders = providers.filter(provider =>
      provider.description.toLowerCase().includes(cityQuery) &&
      (provider.activity.toLowerCase().includes(activityQuery) || provider.product.toLowerCase().includes(activityQuery))
    );

    // Limpiar la lista actual y marcadores
    document.getElementById('provider-list').innerHTML = '';
    map.eachLayer(function(layer) {
      if (layer instanceof L.Marker) {
        map.removeLayer(layer);
      }
    });

    // Mostrar proveedores filtrados solo si hay algo escrito en las barras de búsqueda
    if (cityQuery || activityQuery) {
      // Agrupar proveedores por nombre
      var groupedProviders = filteredProviders.reduce((acc, provider) => {
        if (!acc[provider.name]) {
          acc[provider.name] = {
            lat: provider.lat,
            lng: provider.lng,
            description: provider.description,
            logoURL: provider.logoURL,
            products: []
          };
        }
        acc[provider.name].products.push({
          activity: provider.activity,
          product: provider.product,
          productImageURL: provider.productImageURL
        });
        return acc;
      }, {});

      // Agregar proveedores agrupados al mapa y al sidebar
      Object.keys(groupedProviders).forEach(providerName => {
        var provider = groupedProviders[providerName];
        var marker = L.marker([provider.lat, provider.lng]).addTo(map)
          .bindPopup('<b>' + providerName + '</b><br>' + provider.description);

        var providerItem = document.createElement('div');
        providerItem.className = 'provider-item';

        // Agregar logo del proveedor
        if (provider.logoURL) {
          var logoImg = document.createElement('img');
          logoImg.src = provider.logoURL;
          logoImg.alt = providerName + ' Logo';
          logoImg.className = 'provider-logo';
          providerItem.appendChild(logoImg);
        }

        var providerNameElem = document.createElement('div');
        providerNameElem.innerHTML = '<b>' + providerName + '</b><br>' + provider.description;
        providerItem.appendChild(providerNameElem);

        provider.products.forEach(product => {
          var productItem = document.createElement('div');
          productItem.className = 'product-item';
          productItem.innerHTML = '<b>Actividad:</b> ' + product.activity + '<br><b>Producto:</b> ' + product.product;

          // Agregar imagen del producto
          if (product.productImageURL) {
            var productImg = document.createElement('img');
            productImg.src = product.productImageURL;
            productImg.alt = product.product;
            productItem.appendChild(productImg);
          }

          providerItem.appendChild(productItem);
        });

        providerItem.addEventListener('click', function() {
          map.setView([provider.lat, provider.lng], 10);
          marker.openPopup();
        });
        document.getElementById('provider-list').appendChild(providerItem);
      });
    }
  }

  // Obtener datos y crear marcadores en el mapa y lista en el sidebar
  fetchCSV(sheetURL);

  // Agregar event listeners a las barras de búsqueda
  document.getElementById('search-city').addEventListener('input', filterProviders);
  document.getElementById('search-activity').addEventListener('input', filterProviders);
</script>
</body>
</html>
